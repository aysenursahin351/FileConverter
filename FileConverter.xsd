                                <xs:enumeration value="PhD"/>
                                <xs:enumeration value="MSc"/>
                                <xs:enumeration value="PS"/>
                              </xs:restriction>
                            </xs:simpleType>
                            </xs:element>
                            <xs:element name="income_level">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:unsignedInt">
                                            <xs:attribute name="bigEnd" use="required" />
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="expenditure">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:unsignedInt">
                                            <xs:attribute name="bigEnd" use="required" />
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
